<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_arabic_news">

    <fragment
        android:id="@+id/navigation_arabic_news"
        android:name="com.example.newsapp.ui.arabic.ArabicFragment"
        android:label="@string/title_arabic"
        tools:layout="@layout/fragment_host" />

    <fragment
        android:id="@+id/navigation_world_news"
        android:name="com.example.newsapp.ui.world.WorldFragment"
        android:label="@string/title_world"
        tools:layout="@layout/fragment_host" />

    <fragment
        android:id="@+id/navigation_country_news"
        android:name="com.example.newsapp.ui.country.CountryFragment"
        android:label="@string/title_country"
        tools:layout="@layout/fragment_host" />

    <fragment
        android:id="@+id/navigation_source_news"
        android:name="com.example.newsapp.ui.source.SourceFragment"
        android:label="@string/title_source"
        tools:layout="@layout/fragment_host" />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.example.newsapp.ui.about.AboutFragment"
        android:label="@string/title_about"
        tools:layout="@layout/fragment_about" />
</navigation>
